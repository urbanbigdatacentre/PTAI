# Docker environment variables for PTAI analysis
# Copy this file to .env and modify paths as needed

# Data directory path (REQUIRED)
# This should point to your local directory containing all the required datasets
PTAI_DATA_PATH=./data

# Output directory path
# Where accessibility indicators will be saved
PTAI_OUTPUT_PATH=./output

# Plots directory path  
# Where visualizations will be saved
PTAI_PLOTS_PATH=./plots

# Logs directory path
# Where execution logs will be saved
PTAI_LOGS_PATH=./logs

# Optional: Set memory limits (in GB)
PTAI_MEMORY_LIMIT=8G

# Optional: Set CPU limits
PTAI_CPU_LIMIT=4
